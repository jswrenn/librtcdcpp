FROM container4armhf/armhf-alpine

RUN apk update
RUN apk upgrade
RUN apk add cmake
RUN apk add python
RUN apk add g++
RUN apk add openssl
RUN apk add openssl-dev
RUN apk add git
RUN apk add gtk-doc
RUN apk add libnice
RUN apk add libnice-dev
RUN apk add libtool
RUN apk add m4
RUN apk add automake
RUN apk add python-dev
RUN apk add libffi-dev
RUN apk add libmount
RUN apk add autoconf
RUN apk add make
RUN apk add py-pip
RUN pip install --upgrade pip
RUN apk add build-base
RUN pip install setuptools
RUN pip install flask
RUN pip install Flask-Sockets
RUN apk add python3
RUN python3 -m ensurepip
RUN apk add python3-dev
RUN apk add zeromq
RUN apk add zeromq-dev
RUN apk add libzmq
RUN pip3 install --upgrade pip setuptools
RUN pip3 install cffi
RUN pip3 install matplotlib
RUN pip3 install numpy
RUN pip3 install cent
RUN apk add protobuf protobuf-dev
ADD ./ /psl-librtcdcpp
RUN cd /psl-librtcdcpp/python/centrifuge-python && pip3 install -r requirements.txt && python3 setup.py install
RUN cd /psl-librtcdcpp/usrsctp/ && sh ./bootstrap && ./configure 
WORKDIR /psl-librtcdcpp
RUN cd /psl-librtcdcpp && cd ./python/ && ./build.sh
ENV LD_LIBRARY_PATH=./
